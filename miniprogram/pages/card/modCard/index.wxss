}
.view_text{
    font-size: 13px;

}
.date{
    width: 100%;
    padding: 5rpx 0;
    text-align: center;
}
.bottom{
    width: 100%;
    background: #fff;
    display: flex;
    flex-flow:row nowrap;
    justify-content: center;
    align-items: center;
}
.bottom .btn{
    flex: 1;
    line-height: 2;
    padding-top: 10rpx;
    padding-bottom: 10rpx;
    margin: 30rpx 30rpx;
}
.btn.success{
    background: #4EA7E3;
    color: #fff;
}

.btn.del{
    background: #4EA7E3;
    color: #fff;
  }

.form-list{
    width:100%;
    padding: 5px;
    margin-bottom: 30px;
}
.form-list-left{
    width:15%;
    float: left;
    vertical-align:middle;

}
.form-list-right{
    width:80%;
    float: right;
}
.photo { 
    height: 120rpx;
    width: 120rpx;
    position: fixed;
    bottom: 170rpx;
    right: 30rpx;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    font-size: 24rpx;
    background: rgba(0, 0, 0, .6);
    border-radius: 50%;
    z-index: 10;
  } 
  .photo image {
    height: 70rpx;
    width: 70rpx;
  }
  .photo text {
    color: #fff;  
  }
  
  .photo button {
    position: absolute;
    height: 100%;
    width: 100%;
    opacity: 0.1;
    z-index: 99;
  }


  /* 富文本 */
  @import "./assets/iconfont.wxss";

  .ql-container {
    box-sizing: border-box;
    width: 100%;
    height: 80%;
    font-size: 16px;
    line-height: 1.5;
    overflow: auto;
    padding: 10px 10px 20px 10px;
    border: 1px solid #ECECEC;
  }
  
  .ql-active {
    color: #22C704;
  }
  
  .iconfont {
    display: inline-block;
    width: 30px;
    height: 30px;
    cursor: pointer;
    font-size: 20px;
  }
  
  .toolbar {
    box-sizing: border-box;
    padding: 0 10px;
    height: 50px;
    width: 100%;
    position: fixed;
    left: 0;
    right: 100%;
    bottom: 0;
    display: flex;
    align-items: center;
    justify-content: space-between;
    border: 1px solid #ECECEC;
    border-left: none;
    border-right: none;
  }
  
  